<form
  class="<%= class_names "flex flex-col items-center", local_assigns[:class] %>"
  data-controller="search"
  data-action="search#submit"
  data-search-path-value="<%= compare_path query: "" %>">
  <input
    class="w-full"
    type="text"
    value="<%= gemnames.join " " %>"
    placeholder="Gem names separated by space."
    autocomplete="off"
    data-search-target="input">
  <div class="mt-6">
    <%= button_primary t ".search" %>
  </div>
</form>
